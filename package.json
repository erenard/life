{
  "name": "conway-life",
  "version": "1.0.0",
  "description": "Conway game of life",
  "main": "app/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "electron": "electron app/electron.js",
    "start": "webpack-dev-server --mode development",
    "lint": "eslint . --cache --fix",
    "prepare": "git clone https://github.com/erenard/life.js.git --branch gh-pages dist",
    "deploy": "cd dist && git add --all && git commit -m \"Release at $(date)\" && git push",
    "test": "webpack --mode development --config webpack.config.test.js && mocha ./.tmp/tests.js",
    "cover": "cross-env NODE_ENV=coverage nyc --reporter=lcov --reporter=text npm run test",
    "coveralls": "cross-env NODE_ENV=coverage nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erenard/life.js.git"
  },
  "keywords": [
    "conway",
    "game",
    "of",
    "life"
  ],
  "author": "Eric Renard",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/erenard/life.js/issues"
  },
  "homepage": "https://github.com/erenard/life.js#readme",
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-loader": "^8.0.4",
    "babel-preset-env": "^1.2.1",
    "chai": "^4",
    "coveralls": "^3",
    "cross-env": "^5.1.4",
    "css-loader": "^1.0.1",
    "eslint": "^5.9.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsdoc": "^3.9.1",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.0.6",
    "inject-loader": "^4.0.1",
    "istanbul": "^0.4.5",
    "istanbul-instrumenter-loader": "^3.0.0",
    "json-loader": "^0.5.4",
    "mocha": "^5.0.4",
    "nyc": "^13.1.0",
    "sinon": "^7.1.1",
    "style-loader": "^0.23.1",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.0.1",
    "webpack-dev-server": "^3.1.10",
    "webpack-node-externals": "^1.5.4"
  },
  "dependencies": {
    "normalize.css": "^8.0.0",
    "pixi.js": "^4.4.4",
    "stats.js": "^0.17.0",
    "vue": "^2.5.15",
    "vue-router": "^3.0.1",
    "vuetify": "^1.0.11"
  },
  "nyc": {
    "include": [
      "app/**/*.js"
    ],
    "instrument": false,
    "sourceMap": false
  }
}
